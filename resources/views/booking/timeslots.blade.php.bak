    // تحديث المواعيد بشكل صامت بدون إظهار مؤشر التحميل
    function refreshTimeSlotsQuietly(date) {
        console.log('Auto-refreshing timeslots:', date);
        
        // استخدام نفس API لكن بدون إظهار مؤشرات التحميل
        fetch(`/booking/api/time-slots?specialist_id=${specialist_id}&service_id=${service_id}&date=${date}`)
            .then(response => {
                if (!response.ok) {
                    throw new Error(`Error HTTP: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                if (data.success && data.timeSlots && data.timeSlots.length > 0) {
                    // فلترة المواعيد المتاحة فقط
                    const availableSlots = data.timeSlots.filter(slot => slot.available);
                    
                    // الحصول على الموعد المحدد حاليًا إن وجد
                    const selectedTime = document.getElementById('selected_time').value;
                    
                    // التحقق مما إذا كان الموعد المحدد لا يزال متاحًا
                    if (selectedTime) {
                        const isStillAvailable = availableSlots.some(slot => slot.time === selectedTime);
                        
                        if (!isStillAvailable) {
                            // الموعد المحدد لم يعد متاحًا
                            const alertMsg = document.createElement('div');
                            alertMsg.className = 'alert alert-danger mt-3 text-center';
                            alertMsg.setAttribute('role', 'alert');
                            alertMsg.innerHTML = `<i class="fas fa-exclamation-circle"></i> عذراً، هذا الموعد لم يعد متاحًا. الرجاء اختيار موعد آخر.`;
                            
                            // إزالة أي رسائل سابقة
                            const existingAlerts = document.querySelectorAll('.alert');
                        }
                    });

                    // إضافة فئة المحدد للفترة المحددة
                    this.classList.add('selected');

                    // تغيير النص للتأكيد على اختيار الوقت
                    const statusElement = this.querySelector('.time-status-available');
                    statusElement.innerHTML = '<i class="fas fa-check-circle"></i> تم الاختيار';
                    statusElement.style.color = '#0d6efd';
                    statusElement.style.backgroundColor = 'rgba(13, 110, 253, 0.15)';

                    // تحديث الوقت المحدد
                    selectedTime = slot.time;
                    document.getElementById('selected_time').value = selectedTime;

                    // تمكين زر المتابعة وإضافة تأثير بصري
                    const continueBtn = document.getElementById('continueBtn');
                    continueBtn.disabled = false;
                    continueBtn.classList.add('ready');

                    // إظهار رسالة تأكيد
                    const confirmationMsg = document.createElement('div');
                    confirmationMsg.className = 'alert alert-success mt-3 text-center';
                    confirmationMsg.setAttribute('role', 'alert');
